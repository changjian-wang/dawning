<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- 官方 NuGet 源 -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- GitHub Packages 私有源 -->
    <add key="github" value="https://nuget.pkg.github.com/changjian-wang/index.json" />
  </packageSources>

  <packageSourceCredentials>
    <!-- 
      GitHub Packages 认证配置
      
      方式 1: 环境变量 (推荐用于 CI/CD)
      设置环境变量: GITHUB_TOKEN=your_personal_access_token
      
      方式 2: 用户级 nuget.config (推荐用于本地开发)
      位置: %APPDATA%\NuGet\NuGet.Config (Windows) 或 ~/.nuget/NuGet/NuGet.Config (Linux/Mac)
      
      <github>
        <add key="Username" value="你的GitHub用户名" />
        <add key="ClearTextPassword" value="你的Personal Access Token" />
      </github>
      
      方式 3: 直接在此文件配置 (不推荐提交到仓库)
      取消下方注释并填入你的凭据
    -->
    <!--
    <github>
      <add key="Username" value="changjian-wang" />
      <add key="ClearTextPassword" value="ghp_xxxxxxxxxxxx" />
    </github>
    -->
  </packageSourceCredentials>

  <packageSourceMapping>
    <!-- 默认从 nuget.org 获取包 -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    
    <!-- Dawning.* 包从 GitHub 获取 -->
    <packageSource key="github">
      <package pattern="Dawning.*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
