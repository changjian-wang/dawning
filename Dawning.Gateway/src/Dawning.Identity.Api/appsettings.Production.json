{
  "ConnectionStrings": {
    "MySQL": "Server=your-db-server;Port=3306;Database=dawning_identity;Uid=your-user;Pwd=your-password;"
  },
  "OpenIddict": {
    "UseDevelopmentCertificate": false,
    "Certificates": {
      "Signing": {
        "Type": "File",
        "Path": "/app/certificates/signing.pfx",
        "Password": "your-certificate-password"
      },
      "Encryption": {
        "Type": "File",
        "Path": "/app/certificates/encryption.pfx",
        "Password": "your-certificate-password"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
