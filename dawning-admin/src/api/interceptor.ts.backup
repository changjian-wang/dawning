import axios, { AxiosInstance, AxiosRequestConfig, AxiosResponse, AxiosError } from 'axios';
import { Message, Modal } from '@arco-design/web-vue';
import { useUserStore } from '@/store';
import { getToken, getRefreshToken } from '@/utils/auth';
import { refreshAccessToken } from './auth';

export interface HttpResponse<T = unknown> {
  code: number;
  message: string;
  data: T;
}

// åˆ›å»º axios å®ä¾‹
const instance: AxiosInstance = axios.create({
  baseURL: import.meta.env.VITE_API_BASE_URL || '',
  timeout: 30000,
});

// Token åˆ·æ–°ç›¸å…³
let isRefreshing = false;
let refreshSubscribers: ((token: string) => void)[] = [];

// æ·»åŠ è®¢é˜…è€…ç­‰å¾… token åˆ·æ–°
function subscribeTokenRefresh(callback: (token: string) => void) {
  refreshSubscribers.push(callback);
}

// é€šçŸ¥æ‰€æœ‰è®¢é˜…è€… token å·²åˆ·æ–°
function onTokenRefreshed(token: string) {
  refreshSubscribers.forEach((callback) => callback(token));
  refreshSubscribers = [];
}

// è¯·æ±‚æ‹¦æˆªå™¨
axiosInstance.interceptors.request.use(
  (config: AxiosRequestConfig) => {
    console.log('ğŸ” Request Interceptor - URL:', config.url);
    console.log('ğŸ” Request Interceptor - Method:', config.method);
    const token = getToken();
    if (token && config.url !== '/connect/token') {
      config.headers = {
        ...config.headers,
        Authorization: `Bearer ${token}`,
      };
      console.log('ğŸ” Request Interceptor - Token added');
    }

    console.log('âœ… Request Interceptor - Config:', config);
    return config;
  },
  (error: AxiosError) => {
    console.error('âŒ Request Interceptor - Error:', error);
    return Promise.reject(error);
  }
);

// å¤„ç†è‡ªåŠ¨ç™»å‡º
const handleAutoLogout = async () => {
  try {
    const userStore = useUserStore();
    await userStore.logout();
    window.location.reload();
  } catch (error) {
    console.error('Logout failed:', error);
  }
};

// æ˜¾ç¤ºç™»å‡ºç¡®è®¤å¼¹çª—
const showLogoutModal = () => {
  Modal.error({
    title: 'Confirm logout',
    content:
      'You have been logged out, you can cancel to stay on this page, or log in again',
    okText: 'Re-Login',
    onOk: handleAutoLogout,
  });
};

// å“åº”æ‹¦æˆªå™¨
axiosInstance.interceptors.response.use(
  (response: AxiosResponse<HttpResponse>) => {
    console.log('ğŸ” Response Interceptor - Full response:', response);
    console.log('ğŸ” Interceptor - Response received!', response);
    const { data } = response;
    console.log('ğŸ” Interceptor - Extracted data:', data);

    // OAuth ç«¯ç‚¹ç›´æ¥è¿”å›åŸå§‹å“åº”
    if (response.config.url?.includes('/connect/token')) {
      return response;
    }

    // è°ƒè¯•æ—¥å¿—
    console.log('ğŸ” Interceptor - URL:', response.config.url);
    console.log('ğŸ” Interceptor - Response data:', data);
    console.log('ğŸ” Interceptor - data.code:', data.code);
    console.log('ğŸ” Interceptor - data.data:', data.data);

    // æ£€æŸ¥ä¸šåŠ¡çŠ¶æ€ç ï¼ˆç»Ÿä¸€ä¸º 0 è¡¨ç¤ºæˆåŠŸï¼‰
    if (!isSuccessCode(data.code)) {
      // æ˜¾ç¤ºé”™è¯¯æ¶ˆæ¯
      Message.error({
        content: data.message || data.msg || 'Error',
        duration: 5000,
      });

      // å¤„ç†éœ€è¦ç™»å‡ºçš„é”™è¯¯ç 
      const shouldLogout =
        LOGOUT_ERROR_CODES.includes(data.code) &&
        response.config.url !== '/api/user/info';

      if (shouldLogout) {
        showLogoutModal();
      }

      return Promise.reject(new Error(data.message || data.msg || 'Error'));
    }

    console.log('âœ… Interceptor - Returning:', data);
    return data; // è¿”å› dataï¼Œå³ { code, message, data }
  },
  async (error: AxiosError<HttpResponse>) => {
    console.error('âŒ Response Interceptor - Error occurred:', error);
    console.error('âŒ Response Interceptor - Error response:', error.response);
    console.error('âŒ Response Interceptor - Error status:', error.response?.status);
    
    // å¤„ç† 401 æœªæˆæƒé”™è¯¯ - å°è¯•åˆ·æ–° token
    if (
      error.response?.status === 401 &&
      error.config?.url !== '/connect/token'
    ) {
      const originalRequest = error.config;
      const refreshToken = getRefreshToken();

      // å¦‚æœæœ‰ refresh token ä¸”ä¸åœ¨åˆ·æ–°è¿‡ç¨‹ä¸­ï¼Œå°è¯•åˆ·æ–°
      if (refreshToken && !isRefreshing) {
        isRefreshing = true;

        try {
          const response = await refreshAccessToken(refreshToken);
          const { access_token, refresh_token, id_token, expires_in } =
            response.data;

          // æ›´æ–° tokens
          const { setToken, setRefreshToken, setIdToken, setTokenExpiresAt } =
            await import('@/utils/auth');
          setToken(access_token);
          if (refresh_token) {
            setRefreshToken(refresh_token);
          }
          if (id_token) {
            setIdToken(id_token);
          }
          setTokenExpiresAt(expires_in);

          // é€šçŸ¥æ‰€æœ‰ç­‰å¾…çš„è¯·æ±‚
          onTokenRefreshed(access_token);
          isRefreshing = false;

          // é‡è¯•åŸå§‹è¯·æ±‚
          if (originalRequest?.headers) {
            originalRequest.headers.Authorization = `Bearer ${access_token}`;
          }
          return axiosInstance(originalRequest!);
        } catch (refreshError) {
          // åˆ·æ–°å¤±è´¥ï¼Œè·³è½¬ç™»å½•
          isRefreshing = false;
          refreshSubscribers = [];
          showLogoutModal();
          return Promise.reject(refreshError);
        }
      }

      // å¦‚æœæ­£åœ¨åˆ·æ–°ï¼Œå°†è¯·æ±‚åŠ å…¥é˜Ÿåˆ—
      if (isRefreshing) {
        return new Promise((resolve) => {
          subscribeTokenRefresh((token: string) => {
            if (originalRequest?.headers) {
              originalRequest.headers.Authorization = `Bearer ${token}`;
            }
            resolve(axiosInstance(originalRequest!));
          });
        });
      }

      // æ²¡æœ‰ refresh tokenï¼Œç›´æ¥ç™»å‡º
      showLogoutModal();
      return Promise.reject(error);
    }

    // å¤„ç†ç½‘ç»œé”™è¯¯æˆ–å…¶ä»–HTTPé”™è¯¯
    const message =
      error.response?.data?.message || error.response?.data?.msg || error.message || 'Request Error';

    Message.error({
      content: message,
      duration: 5000,
    });

    return Promise.reject(error);
  }
);

// å¯¼å‡ºé…ç½®å¥½çš„ axios å®ä¾‹
export default axiosInstance;

// å¯¼å‡ºä¸€äº›å¸¸ç”¨çš„è¯·æ±‚æ–¹æ³•
// æ³¨æ„ï¼šå“åº”æ‹¦æˆªå™¨è¿”å› {code, message, data}ï¼Œæ‰€ä»¥è¿™é‡Œç›´æ¥è¿”å› HttpResponse
export const http = {
  get: async <T = any>(
    url: string,
    config?: AxiosRequestConfig
  ): Promise<HttpResponse<T>> => {
    const response = await axiosInstance.get(url, config);
    return response as any as HttpResponse<T>;
  },

  post: async <T = any>(
    url: string,
    data?: any,
    config?: AxiosRequestConfig
  ): Promise<HttpResponse<T>> => {
    const response = await axiosInstance.post(url, data, config);
    return response as any as HttpResponse<T>;
  },

  put: async <T = any>(
    url: string,
    data?: any,
    config?: AxiosRequestConfig
  ): Promise<HttpResponse<T>> => {
    const response = await axiosInstance.put(url, data, config);
    return response as any as HttpResponse<T>;
  },

  delete: async <T = any>(
    url: string,
    config?: AxiosRequestConfig
  ): Promise<HttpResponse<T>> => {
    const response = await axiosInstance.delete(url, config);
    return response as any as HttpResponse<T>;
  },
};
